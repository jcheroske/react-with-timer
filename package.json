{
  "name": "react-with-timer-hoc",
  "description": "A React HOC that simplifies setTimeout-based timers.",
  "version": "0.2.2",
  "author": "Jay Cheroske <jay@portal.org>",
  "repository": {
    "type": "git",
    "url": "git://github.com/jcheroske/react-with-timer-hoc.git"
  },
  "bugs": {
    "url": "https://github.com/jcheroske/react-with-timer-hoc/issues"
  },
  "homepage": "https://github.com/jcheroske/react-with-timer-hoc#readme",
  "license": "MIT",
  "keywords": [
    "react",
    "higher-order",
    "components",
    "hoc",
    "recompose",
    "utilities",
    "setTimeout"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "npm run lint && npm run build:dev",
    "build:dev": "NODE_ENV=development webpack --progress --colors",
    "build:prod": "NODE_ENV=production webpack --progress --colors",
    "build:watch": "NODE_ENV=development webpack --progress --colors --watch",
    "clean": "rimraf dist/*",
    "modules": "rimraf node_modules/* && npm i",
    "test": "ava --concurrency=5",
    "test:watch": "npm run test -- --watch",
    "prepublish": "npm run build:prod",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "peerDependencies": {
    "invariant": "^2.2.2",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "warning": "^3.0.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.24.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^2.1.1",
    "invariant": "^2.2.2",
    "jsdom": "^9.12.0",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "source-map-loader": "^0.2.0",
    "uglifyjs-webpack-plugin": "^0.3.1",
    "warning": "^3.0.0",
    "webpack": "^2.3.1"
  },
  "devEngines": {
    "node": "5.x",
    "npm": "3.x"
  },
  "ava": {
    "files": [
      "src/**/__tests__/*{.,-}test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register",
      "./ava-test-setup"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "last 2 versions",
            "node": "current"
          }
        }
      ],
      "stage-2",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "standard",
      "standard-react"
    ],
    "globals": {
      "sinon": true
    },
    "parser": "babel-eslint",
    "plugins": [],
    "root": true,
    "rules": {}
  }
}
